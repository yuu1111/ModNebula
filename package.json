{
    "name": "nebula",
    "version": "0.1.0",
    "description": "Utility package to generate a distribution.json for Helios.",
    "type": "module",
    "exports": "./dist/index.js",
    "scripts": {
        "dev": "bun run src/index.ts",
        "start": "bun run build && bun dist/index.js",
        "fs": "bun dist/index.js",
        "faststart": "bun dist/index.js",
        "clean": "rimraf dist",
        "tsc": "tsc",
        "build": "bun run clean && bun run tsc",
        "build:exe": "bun build src/index.ts --compile --minify --outfile modnebula.exe",
        "build:exe:debug": "bun build src/index.ts --compile --sourcemap --outfile modnebula-debug.exe",
        "lint": "biome check .",
        "format": "biome format --write .",
        "check": "biome check --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dscalzi/Nebula.git"
    },
    "keywords": [
        "helios",
        "nebula",
        "distribution"
    ],
    "author": "Daniel Scalzi",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dscalzi/Nebula/issues"
    },
    "homepage": "https://github.com/dscalzi/Nebula#readme",
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@types/fs-extra": "^11.0.4",
        "@types/lodash.merge": "^4.6.9",
        "@types/luxon": "^3.7.1",
        "@types/node": "^25.0.8",
        "@types/triple-beam": "^1.3.5",
        "@types/yargs": "^17.0.35",
        "bun-types": "^1.3.6",
        "rimraf": "^6.1.2",
        "typescript": "~5.9.3"
    },
    "dependencies": {
        "fs-extra": "^11.3.3",
        "got": "^14.6.6",
        "helios-distribution-types": "^1.3.0",
        "lodash.merge": "^4.6.2",
        "luxon": "^3.7.2",
        "minimatch": "^10.1.1",
        "node-stream-zip": "^1.15.0",
        "toml": "^3.0.0",
        "triple-beam": "^1.4.1",
        "ts-json-schema-generator": "^2.4.0",
        "winston": "^3.19.0",
        "yargs": "^18.0.0"
    }
}
